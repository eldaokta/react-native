<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-configuration SYSTEM
        "https://www.hibernate.org/dtb/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://127.0.1:5432/school</property>

        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">11oktober</property>
        <property name="show_sql">true</property>
<!--        <property name="hbm2ddl.auto">create</property>-->


        <mapping class="com.enigma.model.Student"></mapping>
        <mapping class="com.enigma.model.Subject"></mapping>
<!--        <mapping class="com.enigma.model.Room"></mapping>-->
        <mapping class="com.enigma.model.StudentSubject"></mapping>

    </session-factory>
</hibernate-configuration>